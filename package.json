{
    "name": "ts-boilerplate",
    "version": "1.0.0",
    "description": "a boilerplate for Typescript projects of mine",
    "main": "app.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "start": "nodemon src/app.ts",
        "start:dev": "",
        "test": "jest --coverage",
        "test:watch": "jest --watchAll",
        "lint": "eslint . --ext .ts --ext .mts",
        "prebuild": "npm run lint",
        "build": "tsc -p tsconfig.json",
        "build:watch": "tsc -w -p tsconfig.json",
        "prettier": "prettier --config .prettierrc --write ."
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^29.5.2",
        "@types/node": "^20.4.1",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "eslint": "^8.44.0",
        "jest": "^29.6.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    }
}
